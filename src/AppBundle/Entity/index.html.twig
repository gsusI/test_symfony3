{% extends 'base.html.twig' %}

{% block body %}
    <h1>Team list</h1>

    <table>
        <thead>
            <tr>
                <th>Teamid</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td><a href="{{ path('team_show', { 'id': team.teamID }) }}">{{ team.teamID }}</a></td>
                <td>{{ team.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('team_show', { 'id': team.teamID }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('team_edit', { 'id': team.teamID }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('team_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
