{% extends 'base.html.twig' %}

{% block body %}
    <h1>Competition</h1>

    <table>
        <tbody>
            <tr>
                <th>Competitionid</th>
                <td>{{ competition.competitionID }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ competition.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
